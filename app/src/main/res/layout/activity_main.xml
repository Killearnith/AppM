<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondopant">

    <ImageButton
        android:id="@+id/imgPist"
        android:onClick="onCambioImg"
        android:background="@null"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginStart="96dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="405dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/pistachocerrado"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck"
        android:contentDescription="@string/foto_pistachos" />

    <TextView
        android:text="@string/pistachos"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginStart="72dp"
        android:textSize="14pt"
        android:textAlignment="center"
        android:layout_marginTop="405dp"
        android:textColor="#FFA219"
        android:fontFamily="@string/common_google_play_services_notification_ticker"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numPist"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="220dp"
        android:textSize="14pt"
        android:textAlignment="center"
        android:layout_marginTop="406dp"
        android:textColor="#FFA219"
        android:fontFamily="@string/common_google_play_services_notification_ticker"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>